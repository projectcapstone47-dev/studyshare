# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_PATH=./database/studyshare.db

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/materials

# Rate Limiting
UPLOAD_RATE_LIMIT=5
RATE_LIMIT_WINDOW=900000

# Allowed File Types
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,jpg,jpeg,png

# JWT Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# Session Configuration (CHANGE THESE IN PRODUCTION!)
SESSION_SECRET=your-session-secret-key-change-this-in-production-min-32-chars
SESSION_NAME=studyshare.sid

# Admin Credentials (Default)
ADMIN_EMAIL=admin@studyshare.com
ADMIN_PASSWORD=Admin@123
